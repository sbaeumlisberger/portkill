<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PortKill.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PortKill"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="PortKill">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <StackPanel Padding="16" Spacing="16" Loaded="StackPanel_Loaded">
        <TextBox x:Name="portNumberTextBox" PlaceholderText="Enter Port"/>
        <Grid>
            <Button Content="Show Process" Click="ShowProcessButton_Click"/>
            <Button HorizontalAlignment="Right" Style="{ThemeResource AccentButtonStyle}" Content="Kill Process" Click="KillButton_Click"/>
        </Grid>
        <TextBlock x:Name="infoTextBlock" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
